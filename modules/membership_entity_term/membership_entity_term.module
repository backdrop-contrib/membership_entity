/**
 * Access callback for a membership term.
 *
 * A term inherits access from the membership.
 */
function membership_entity_term_access($term, $op, $account = NULL) {
  $membership = membership_entity_load($term->mid);
  return membership_entity_access($membership, $op, $account);
}

/**
 * Label callback for membership entity terms.
 */
function membership_entity_term_label($term, $entity_type) {
  $membership = membership_entity_load($term->mid);
  return t('@member_id (@term starting @start)', array(
    '@member_id' => $membership->member_id,
    '@term' => $term->term,
    '@start' => format_date(strtotime($term->start), 'short'),
  ));
}

/**
 * Entity metadata callback to load membership term properties.
 */
function membership_entity_term_get_properties($entity, array $options, $name, $entity_type) {
  switch ($name) {
    case 'end':
      return strtotime($entity->start);

    case 'start':
      return strtotime($entity->start);

    case 'expiration':
      return strtotime(membership_entity_term_get_expiration($entity));

    case 'renew_url':
      return url('membership/' . $entity->mid . '/renew', $options);
  }
}

/**
 * Implements hook_cron().
 */
function membership_entity_term_cron() {
  // Find all expired memberships.
  $subquery = db_select('membership_entity_term', 't');
  $subquery->addField('t', 'mid');
  $subquery->addField('t', 'term');
  $subquery->addExpression('MIN(end)', 'min_end');
  $subquery->addExpression('MAX(end)', 'max_end');
  $subquery->groupBy('t.mid');

  $query = db_select('membership_entity', 'm');
  $query->join($subquery, 't', 'm.mid=t.mid');
  $query->addField('m', 'mid');
  $query->condition('m.status', MEMBERSHIP_ENTITY_ACTIVE);

  $now = new DateObject('now', 'UTC');
  $query->condition('t.max_end', date_format_date($now, 'custom', DATE_FORMAT_DATETIME), '<');
  $query->condition('t.term', 'lifetime', '<>');
  $result = $query->execute()->fetchAllAssoc('mid');

  // Queue them up for expiration.
  $queue = DrupalQueue::get('membership_entity_term_expire');
  foreach (array_keys($result) as $mid) {
    $queue->createItem($mid);
  }
}

/**
 * Implements hook_cron_queue_info().
 */
function membership_entity_term_cron_queue_info() {
  $queues['membership_entity_term_expire'] = array(
    'worker callback' => 'membership_entity_term_expire_worker',
    'time' => 120,
  );
  return $queues;
}

/**
 * Worker callback to process membership expirations.
 */
function membership_entity_term_expire_worker($data) {
  $membership = membership_entity_load($data);
  $membership->status = MEMBERSHIP_ENTITY_EXPIRED;
  membership_entity_save($membership);
  watchdog('membership_entity_term', 'Membership <a href="!url">@member_id</a> has expired.', array(
    '!url' => url('membership/' . $membership->mid),
    '@member_id' => $membership->member_id,
  ), WATCHDOG_INFO);
}

